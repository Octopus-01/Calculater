<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
       android:id="@+id/FieldContainer"
       android:layout_width="match_parent"
       android:layout_height="200dp"
       android:layout_marginTop="0dp"
       android:gravity="bottom"
       app:layout_constraintTop_toTopOf="parent"
       android:orientation="vertical">

       <EditText
           android:id="@+id/inputTextField"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="30sp"
           android:hint="Input text field"
           android:gravity="right"/>

       <EditText
           android:id="@+id/outputTextFeild"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:textSize="30sp"
           android:hint="Output text field"
           android:gravity="right"/>

   </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/FieldContainer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="bottom">

        <TableRow>
            <android.widget.Button
                android:text="C"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:height="90dp"
                android:background="@drawable/roundcornerbtngr"
                android:onClick="ButtonClicked"
                />
            <android.widget.Button
                android:text="DEL"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:height="90dp"
                android:background="@drawable/roundcornerbtngr"
                android:onClick="ButtonClicked"
                />
            <android.widget.Button
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:text="%"
                android:height="90dp"
                android:background="@drawable/roundcornerbtngr"
                android:onClick="ButtonClicked"
                />
            <android.widget.Button
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:text="/"
                android:height="90dp"
                android:background="@drawable/roundcornerbtn"
                android:onClick="ButtonClicked"
                />
        </TableRow>
        <TableRow>
            <android.widget.Button
                android:text="9"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:height="90dp"
                android:background="@drawable/roundcornervtnbl"
                android:onClick="ButtonClicked"
                />
            <android.widget.Button
                android:text="8"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:height="90dp"
                android:background="@drawable/roundcornervtnbl"
                android:onClick="ButtonClicked"
                />
            <android.widget.Button
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:text="7"
                android:height="90dp"
                android:background="@drawable/roundcornervtnbl"
                android:onClick="ButtonClicked"
                />
            <android.widget.Button
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:text="*"
                android:height="90dp"
                android:background="@drawable/roundcornerbtn"
                android:onClick="ButtonClicked"
                />
        </TableRow>
        <TableRow>
            <android.widget.Button
                android:text="6"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:height="90dp"
                android:background="@drawable/roundcornervtnbl"
                android:onClick="ButtonClicked"
                />
            <android.widget.Button
                android:text="5"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:height="90dp"
                android:background="@drawable/roundcornervtnbl"
                android:onClick="ButtonClicked"
                />
            <android.widget.Button
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:text="4"
                android:height="90dp"
                android:background="@drawable/roundcornervtnbl"
                android:onClick="ButtonClicked"
                />
            <android.widget.Button
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:text="-"
                android:height="90dp"
                android:background="@drawable/roundcornerbtn"
                android:onClick="ButtonClicked"
                />
        </TableRow>
        <TableRow>
            <android.widget.Button
                android:text="3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:height="90dp"
                android:background="@drawable/roundcornervtnbl"
                android:onClick="ButtonClicked"
                />
            <android.widget.Button
                android:text="2"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:height="90dp"
                android:background="@drawable/roundcornervtnbl"
                android:onClick="ButtonClicked"
                />
            <android.widget.Button
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:text="1"
                android:height="90dp"
                android:background="@drawable/roundcornervtnbl"
                android:onClick="ButtonClicked"
                />
            <android.widget.Button
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="10dp"
                android:text="+"
                android:height="90dp"
                android:background="@drawable/roundcornerbtn"
                android:onClick="ButtonClicked"
                />
        </TableRow>
        <TableRow>
            <android.widget.Button
                android:layout_span="2"
                android:text="0"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="15dp"
                android:height="90dp"
                android:background="@drawable/roundcornervtnbl"
                android:onClick="ButtonClicked"
                />
            <android.widget.Button
                android:text="."
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="15dp"
                android:height="90dp"
                android:background="@drawable/roundcornervtnbl"
                android:onClick="ButtonClicked"
                />

            <android.widget.Button
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginBottom="15dp"
                android:text="="
                android:height="90dp"
                android:background="@drawable/roundcornerbtn"
                android:onClick="ButtonClicked"
                />
        </TableRow>

    </TableLayout>



</androidx.constraintlayout.widget.ConstraintLayout>